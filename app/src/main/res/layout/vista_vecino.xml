<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@android:color/white">

    <!-- Imagen del vecino -->
    <ImageView
        android:id="@+id/imagenVecino"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_gravity="center_vertical"
        android:contentDescription="Imagen del vecino"
        android:background="@android:color/darker_gray"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp" />

    <!-- Contenedor de texto (nombre y correo) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <!-- Nombre -->
        <TextView
            android:id="@+id/nombreVecino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="16sp"
            android:textColor="#3B5D75"
            android:textStyle="bold" />

        <!-- Correo -->
        <TextView
            android:id="@+id/correoVecino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo electronico"
            android:textSize="14sp"
            android:textColor="#4A4A4A" />
    </LinearLayout>

    <!-- Menú de opciones -->
    <ImageView
        android:id="@+id/menuOpciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_puerta"
        android:contentDescription="Menú de opciones"
        android:padding="8dp" />
</LinearLayout>
