<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:background="@android:color/white"
    tools:ignore="ExtraText">

    <!-- Icono de teléfono -->
    <ImageView
        android:id="@+id/iconPhone"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:tint="#3B5D75" />

    <!-- Nombre -->
    <TextView
        android:id="@+id/contactName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textStyle="bold"
        android:textColor="#3B5D75"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/iconPhone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/optionsMenu" />

    <!-- Descripción -->
    <TextView
        android:id="@+id/contactDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Descripción del trabajo"
        android:textColor="#6B7280"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/iconPhone"
        app:layout_constraintTop_toBottomOf="@id/contactName"
        app:layout_constraintEnd_toStartOf="@id/optionsMenu" />

    <!-- Número de teléfono -->
    <TextView
        android:id="@+id/contactPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2512458436"
        android:textColor="#3B5D75"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/iconPhone"
        app:layout_constraintTop_toBottomOf="@id/contactDescription"
        app:layout_constraintEnd_toStartOf="@id/optionsMenu" />

    <!-- Menú de opciones -->
    <ImageView
        android:id="@+id/optionsMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="#3B5D75" />

</androidx.constraintlayout.widget.ConstraintLayout>
